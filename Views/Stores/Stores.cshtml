@model List<Store>

@{
    List<string> categories = (List<string>)ViewBag.Categories;
}

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<h1>Stores</h1>
					<p>Our catalog</p>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->

<!-- Stores -->
<div class="product-section mt-150 mb-150">
	<div class="container">

		<div class="row">
			<div class="col-md-12">
				<div class="product-filters">
					<ul>
						<li class="active" data-filter="*">All</li>
                        @foreach (string category in categories)
                        {
                            <li data-filter=".@category">@category</li>
                        }
					</ul>
				</div>
			</div>
		</div>

		<div class="row product-lists">
            @foreach (Store store in Model)
            {
                <div class="col-lg-4 col-md-6 text-center @store.Category">
					<a asp-controller="Stores" asp-action="StoreDetails" asp-route-id="@store.Id">
                    <div class="single-product-item">
                        <div class="product-image">
							<img src="~/images/stores/artesanshop.jpg" alt="shop banner @store.Name">
                        </div>
                        <h3>@store.Name</h3>
                        @* <p class="product-price"><span>Per Kg</span> 85$ </p> *@
                        <a asp-controller="Stores" asp-action="StoreDelete" asp-route-id="@store.Id" class="cart-btn">
							<i class="fas fa-star"></i> Delete store</a>
                    </div>
					</a>
                </div>
            }
		</div>

		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="pagination-wrap">
					<ul>
						<li><a href="#">Prev</a></li>
						<li><a href="#">1</a></li>
						<li><a class="active" href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">Next</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end products -->