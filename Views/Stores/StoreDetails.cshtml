            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 product-lists">
                @foreach (Product product in Model.Products)
                {
                    var categoryClasses = string.Join(" ", product.ProdCats.Select(pc => pc.Category.CategoryName));
                    <div class="col-lg-3 col-md-4 col-sm-2 product-card pt-2 mt-2 @categoryClasses">
                        <a asp-controller="Stores" asp-action="ProductDetails" asp-route-id="@product.Id">
                            <div class="card h-100 shadow-sm">
                                <div class="card-img-container p-2">
                                    <img src="~/images/products/@product.Image" class="card-img-top" alt="@product.Name">
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text price-text fw-bold orange-text">@product.Price</p>
                                    <div class="mt-auto d-flex justify-content-center gap-2">
                                        <a asp-controller="Stores" asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-outline-white">
                                            <i class="fa-solid fa-eye"></i> See more
                                        </a>
                                        <button onclick="addToCart(@product.Id)" class="btn btn-orange mx-2">
                                            <i class="fa-solid fa-cart-shopping"></i> Add item
                                        </button>
                                    </div>
                                    @if(isOwner){
                                        <div class="mt-2 d-flex justify-content-center gap-2">
                                            <a asp-controller="Stores" asp-action="ProductEdit" asp-route-id="@product.Id" class="btn btn-outline-white mx-1">
                                                <i class="fa-solid fa-pen-to-square"></i> Edit item
                                            </a>
                                            <a asp-controller="Stores" asp-action="DeleteEdit" asp-route-id="@product.Id" class="btn btn-orange mx-1">
                                                <i class="fa-solid fa-trash-can"></i> Delete item
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>


